<style>
    form {
        display: flex;
    }

        form div {
            flex: 1;
            margin: 10px;
        }
</style>

@model UserCreateViewModel

<div>
    <h1 class="display-4">Register User</h1>
    <div style="height:50px"></div>
    <form method="post" action="/User/AddNew" enctype="multipart/form-data">
        <div>
            <label for="UserName">User Name:</label><br>
            <input type="text" asp-for="UserName"><br>

            <label for="Password">Password:</label><br>
            <input type="text" asp-for="Password"><br>

            <label for="Email">Email:</label><br>
            <input type="text" asp-for="Email"><br>

            <label for="RoleId">Role:</label><br>
            <select asp-for="RoleId" asp-items="@(new SelectList(Model.Roles, "Id", "RoleName"))" class="selectpicker" data-live-search="true">
            </select><br>

            <input style="margin-top:10px" type="submit" value="Submit">
        </div>
        <div>

        </div>
    </form>
</div>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"></script>
