<div>
    <h1 class="display-4">Add New Category</h1>
    <div style="height:50px"></div>
    <form method="post" action="/Book/Upload" enctype="multipart/form-data">
        <label for="categoryName">Title:</label><br>
        <input type="text" id="categoryName" name="categoryName"><br>

        <label for="description">Description:</label><br>
        <input type="text" id="description" name="description"><br>

        <label for="image">Image:</label><br>
        <input type="file" id="image" name="image"><br>

        <label for="createDate">Create Date:</label><br>
        <input type="date" id="createDate" name="createDate"><br>
        <input style="margin-top:10px" type="submit" value="Submit">
    </form>
</div>