<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<style>
    form {
        display: flex;
    }

        form div {
            flex: 1;
            margin: 10px;
        }
</style>

@model CategoryViewModel

<div>
    <h1 class="display-4">Category Detail</h1>
    <div style="height:50px"></div>
    <form method="post" action="/Category/Detail" enctype="multipart/form-data">
        <div>
            <label for="Id">Id:</label><br>
            <input type="text" asp-for="Id"><br>

            <label for="CategoryName">Category Name:</label><br>
            <input type="text" asp-for="CategoryName"><br>

            <label for="Description">Description:</label><br>
            <input type="text" asp-for="Description"><br>

            <label for="Image">Image:</label><br>
            <input type="file" asp-for="Image"><br><br>

            <img id="category-image" src="@Model.ImagePath" alt="no image found" style="height:200px"></img><br><br>

            <input style="margin-top:10px" type="submit" value="Submit">
            <p hidden="@ViewBag.valid" style="color:red">Invalid Input</p>
        </div>
    </form>
</div>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>

<script>
    let bookImage = document.getElementById("category-image");
    let inputFile = document.getElementById("Image");

    inputFile.onchange = function () {
        bookImage.src = URL.createObjectURL(inputFile.files[0]);
    }
</script>